# =============================================================================
# EXPERIENTIAL LEARNING PORTAL - ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment variables for the QR Ticket Software / Experiential Learning Portal
# Copy this file to .env and update the values according to your environment
# NEVER commit .env files to version control!

# =============================================================================
# ENVIRONMENT & DEPLOYMENT
# =============================================================================
NODE_ENV=development # development, production, test
APP_ENV=local # local, staging, production
APP_VERSION=1.0.0
APP_DEBUG=true # Enable debug logging
LOG_LEVEL=info # error, warn, info, debug

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
# CRITICAL: Generate a strong secret key for JWT tokens (minimum 32 characters)
# Use: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars

# Application URLs
NEXTAUTH_URL=http://localhost:3000
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
LOGIN_RATE_LIMIT_BLOCK_DURATION=3600000 # 1 hour

# Session Security
SESSION_TIMEOUT=604800 # 7 days in seconds
COOKIE_SECURE=false # Set to true in production
COOKIE_SAME_SITE=lax # strict, lax, none

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary database connection (use either DATABASE_URL or individual parameters)
DATABASE_URL="postgresql://username:password@localhost:5432/experiential_learning"

# Individual database parameters (alternative to DATABASE_URL)
DATABASE_PROVIDER=postgresql # postgresql, mysql
DATABASE_HOST=localhost
DATABASE_PORT=5432 # PostgreSQL: 5432, MySQL: 3306
DATABASE_DB=experiential_learning
DATABASE_USER=username
DATABASE_PASSWORD=password

# Database Security & Performance
DATABASE_SSL_MODE=prefer # disable, prefer, require
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=2000
DATABASE_IDLE_TIMEOUT=30000
DATABASE_ENABLED=true

# Database Backup (Optional)
DATABASE_BACKUP_ENABLED=false
DATABASE_BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
DATABASE_BACKUP_RETENTION_DAYS=30

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================
# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_SALT_ROUNDS=12

# Account Security
ACCOUNT_LOCKOUT_ENABLED=true
ACCOUNT_LOCKOUT_MAX_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=3600000 # 1 hour
EMAIL_VERIFICATION_REQUIRED=true
TWO_FACTOR_AUTH_ENABLED=false

# JWT Configuration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================
# Google APIs for Plagiarism Detection
GOOGLE_SEARCH_API_KEY=your-google-custom-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-custom-search-engine-id
GOOGLE_API_QUOTA_LIMIT=100 # Daily quota limit

# YouTube API
YOUTUBE_API_KEY=your-youtube-data-api-v3-key
YOUTUBE_API_QUOTA_LIMIT=10000 # Daily quota limit

# Academic Database APIs (Optional)
IEEE_API_KEY=your-ieee-api-key
ARXIV_API_ENABLED=true
CROSSREF_API_ENABLED=true

# =============================================================================
# PLAGIARISM DETECTION
# =============================================================================
PLAGIARISM_ENABLED=true
PLAGIARISM_THRESHOLD=25 # Percentage threshold for flagging
PLAGIARISM_AUTO_CHECK=true
PLAGIARISM_SOURCES=google,youtube,internal,academic
PLAGIARISM_CACHE_DURATION=3600 # Cache results for 1 hour

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
# File Upload Limits
UPLOAD_MAX_SIZE=50MB
UPLOAD_MAX_FILES=10
ALLOWED_FILE_TYPES=pdf,ppt,pptx,doc,docx,mp4,avi,mov,zip,rar

# Storage Configuration
STORAGE_TYPE=local # local, s3, gcs, azure
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# File Security
FILE_SCAN_ENABLED=true
FILE_QUARANTINE_ENABLED=true
ALLOWED_MIME_TYPES=application/pdf,application/vnd.ms-powerpoint,video/mp4

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false # true for 465, false for other ports
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email Security
SMTP_TLS_ENABLED=true
SMTP_AUTH_ENABLED=true

# Email Templates
EMAIL_FROM_NAME=Experiential Learning Portal
EMAIL_FROM_ADDRESS=noreply@yourapp.com
EMAIL_REPLY_TO=support@yourapp.com

# Email Rate Limiting
EMAIL_RATE_LIMIT_ENABLED=true
EMAIL_RATE_LIMIT_MAX_PER_HOUR=50

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Application Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Logging Configuration
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5
LOG_ROTATION_ENABLED=true

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=experiential-learning-portal

# =============================================================================
# SECURITY HEADERS & PROTECTION
# =============================================================================
# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# Security Headers
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000 # 1 year
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_REGISTRATION_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PLAGIARISM_CHECK=true
FEATURE_FILE_UPLOAD=true
FEATURE_AUDIT_LOGGING=true
FEATURE_ADMIN_DASHBOARD=true
FEATURE_STUDENT_DASHBOARD=true
FEATURE_EVALUATOR_DASHBOARD=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TYPE=memory # memory, redis
CACHE_TTL=3600 # 1 hour default TTL

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development Tools
DEV_TOOLS_ENABLED=true
HOT_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/test_db
MOCK_EXTERNAL_APIS=false

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================
# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_SECRET=your-webhook-secret

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#alerts

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_POLICY_DAYS=2555 # 7 years

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=75
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# Compression
GZIP_COMPRESSION_ENABLED=true
BROTLI_COMPRESSION_ENABLED=true

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_URL=https://your-cdn-url.com

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
ANALYTICS_ENABLED=false

# Payment Gateway (Future feature)
PAYMENT_GATEWAY_ENABLED=false
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# =============================================================================
# MOBILE & PWA CONFIGURATION
# =============================================================================
PWA_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# LEGACY SUPPORT
# =============================================================================
# Backwards compatibility
LEGACY_API_ENABLED=false
API_VERSION=v1